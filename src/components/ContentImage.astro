---
interface Props {
  src: string;
  alt: string;
  caption: string;
}

const { src, alt, caption } = Astro.props;
---

<figure>
  <img src={src} alt={alt} loading="lazy" decoding="async" />
  <figcaption>{caption}</figcaption>
</figure>

<style>
  figure {
    display: grid;
    place-content: center;
    padding: 1em;
    border: 1px solid var(--gray);
    border-radius: 0.5em;
    margin-block: 1em;
  }

  img {
    border-radius: 0.5em;
  }

  figcaption {
    margin-top: 0.5em;
    font-style: italic;
    color: var(--gray-light);
    border-top: solid var(--gray-transparent);
  }
</style>
