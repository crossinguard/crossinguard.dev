---
const {icon, size = "32", color = "light"} = Astro.props;
---

<iconify-icon icon={`ph-${icon}`} class="center" width={size} height={size}></iconify-icon>

<style define:vars={{ color: `var(--${color})` }}>
    iconify-icon {
        position: relative;
        top: 0.5rem;
        color: var(--color);
    }
</style>