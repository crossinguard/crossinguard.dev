---
import BaseLayout from "./BaseLayout.astro";
import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
  title: string;
  pubDate: Date;
  author: string;
  date: string;
}>;

const {frontmatter} = Astro.props;
---
<BaseLayout title={frontmatter.title}>
  <h1>{frontmatter.title}</h1>
  <div class="content">
    <slot />
  </div>
</BaseLayout>