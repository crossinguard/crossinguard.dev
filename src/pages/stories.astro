---
import BaseLayout from '../layouts/BaseLayout.astro';
import StoryList from '../components/stories/StoryList.astro';

const title = 'Stories';
---

<BaseLayout title={title}>
  <div class="content">
    <h1 class="center">{title}</h1>
    <p class="center">
      This is a collection of stories from across my life, each only as true as
      my memories allow.
    </p>
    <StoryList />
  </div>
</BaseLayout>
